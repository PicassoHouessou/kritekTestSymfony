{% extends 'base.html.twig' %}
 {% block stylesheets %}
     <style>
         .main{
             margin-top: 100px;
         }
     </style>
 {% endblock %}
{% block body %}
    <section class="container main">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-12">
                <h2 class="mb-5 fs-2">List of invoices</h2>
                {% if invoices|length > 0 %}
                <table class="table table-bordered table-responsive">
                    <thead>
                    <tr>
                        <th scope="col">Number</th>
                        <th scope="col">Customer Id</th>
                        <th scope="col">Date</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for invoice in invoices %}

                    <tr>
                        <td>{{ invoice.number }}</td>
                        <td >{{ invoice.customerId }}</td>
                        <td>{{ invoice.date | date }}</td>
                        <td>  <a href="{{ absolute_url(url('app_invoice_line', {'id': invoice.id})) }}"
                                 target="_blank"
                                 class="" title="Show Fields">
                                <button type="button" id="{{ invoice.id }}"
                                        class="btn btn-primary"
                                        style="cursor:pointer;"><i class="fa fa-eye"></i>
                                </button>
                            </a>

                        </td>
                    </tr>
                    {% endfor%}
                    </tbody>

                </table>
                {% else %}
                    <p> No invoices yet. You can add <a href="{{ absolute_url(path('app_invoice_create')) }}">here</a>  </p>
                {% endif %}
            </div>
    </div>
    </section>
{% endblock %}