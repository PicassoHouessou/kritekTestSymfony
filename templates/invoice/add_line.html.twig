{% extends 'base.html.twig' %}


{% block body %}
    <div class="container mt-5">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-6">
                <h2 class="mb-4">Create Invoice Line </h2>
                {{ form_start(form,{attr: { novalidate:"novalidate"}}) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.invoice, {
                            label:"Invoice number"
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.quantity) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.amount) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.vat, {
                            label:"VAT"
                        }) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.total, {
                            label:"Total with VAT"
                        }) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_row(form.description) }}
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                {{ form_end(form) }}
            </div>
        </div>

    </div>
{% endblock %}

{% block title %}

{% endblock %}

