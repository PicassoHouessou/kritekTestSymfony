<!DOCTYPE html>
<html class="">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>

{% block alert %}
    <div class="container mt-auto">
        <div class="row justify-content-center ">
            {% for message in app.flashes('message') %}
                <div class="alert alert-dark alert-dismissible fade show justify-content-center" role="alert"
                     style=" width: fit-content;">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

<div class="d-flex flex-column ">
{% block body %}{% endblock %}
{% block footer %}

    <div class="align-content-end w-100 bg-dark" style="margin-top: 100px !important; margin-bottom: 0 !important; z-index: 2000;">
        <div class="container-fluid" >
            <div class="row justify-content-center align-items-center ">
                <footer class="col-md-12 text-center p-4">
                    <ul class="list-inline ">
                        <li class="list-inline-item mx-4"><a class="text-white text-decoration-none  "
                                                             href="{{ absolute_url(path('app_home')) }}">Home</a></li>
                        <li class="list-inline-item  mx-4"><a class="text-white text-decoration-none "
                                                              href="{{ absolute_url(path('app_invoice')) }}">List
                                Invoice</a></li>
                        <li class="list-inline-item  mx-4"><a class="text-white text-decoration-none"
                                                              href="{{ absolute_url(path('app_invoice_create')) }}">Add
                                Invoice</a></li>
                        <li class="list-inline-item mx-4"><a class="text-white text-decoration-none"
                                                             href="{{ absolute_url(path('app_invoice_line_create')) }}">Add
                                Invoice
                                Field</a></li>
                    </ul>
                </footer>
            </div>
        </div>
    </div>
{% endblock %}
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>
</html>
